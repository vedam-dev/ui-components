{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "incremental": true,
    "target": "ESNext",
    "module": "ESNext",
    "noEmit": false,
    "emitDeclarationOnly": false, 
    "strict": true,
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": ["react", "react/jsx-runtime"],
    "declaration": true  
  },
  "include": ["src"],
  "exclude": [
    "src/stories/**",
    "node_modules",
    "**/__tests__/**",
    "dist",
    "src/index.tsx",
    "src/sample/**"  
  ]
}